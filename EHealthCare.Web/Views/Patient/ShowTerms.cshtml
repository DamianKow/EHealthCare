@model EHealthCare.Model.ViewModels.PatientShowTermsViewModel
@{
    ViewBag.Title = "Terms";
    Layout = "~/Views/Shared/_mainView.cshtml";
}

<h2>Terms</h2>

@using (Html.BeginForm("ShowTerms", "Patient"))
{
    <table class="table">
        <thead>
        <tr>
            <th>Doctor</th>
            <th>Doctor's specialization</th>
            <th>Date</th>
            <th></th>
        </tr>
        </thead>
        
        <tbody>
        
        @foreach (var term in Model.Terms)
        {
            <tr>
                <td>@term.Doctor.Name @term.Doctor.Surname</td>
                <td>@term.Doctor.Specialization</td>
                <td>@term.DateTimeOfTerm</td>
                <td><button type="submit" class="btn btn-primary" name="submitButton" value="@term.TermId">Book a visit</button></td>
            </tr>
        }
        </tbody>
    </table>

}
