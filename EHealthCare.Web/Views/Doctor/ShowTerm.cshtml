@model EHealthCare.Model.ViewModels.ShowTermsViewModel

@{
    ViewBag.Title = "ShowTerm";
    Layout = "~/Views/Shared/_mainView.cshtml";
}

<h2>My terms</h2>

@using (Html.BeginForm("ShowTerm", "Doctor"))
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Day</th>
            <th>Hour</th>
        </tr>
        </thead>
        
        <tbody>
        
            @foreach (var term in Model.Terms)
            {
                <tr>
                    <td>@term.TermId</td>
                    <td>@term.Day</td>
                    <td>@term.Hour</td>
                </tr>
            }
        </tbody>
    </table>

}

