@model EHealthCare.Model.ViewModels.ManagePrescriptionsViewModel
@{
    ViewBag.Title = "Manage prescriptions";
    Layout = "~/Views/Shared/_mainView.cshtml";
}

<h2>Manage prescriptions</h2>


@using (Html.BeginForm("ManagePrescriptions", "Doctor"))
{
    <div class="container">
        <div class="row">
            <div class="form-group">
                <div class="form-horizontal" align="center">
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.VisitId, (SelectList) ViewBag.Visits, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(m => m.Comment)
                            @Html.TextBoxFor(m => m.Comment, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <button type="submit" class="btn btn-primary" name="submitButton" value="prescription">Add examination and prescription</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="form-group">
                <div class="form-horizontal" align="center">
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.PrescriptionId, (SelectList) ViewBag.Prescriptions, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.MedicineId, (SelectList) ViewBag.Medicines, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                                <button type="submit" class="btn btn-primary" name="submitButton" value="prescriptionMedicine">Add medicine to prescription</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}